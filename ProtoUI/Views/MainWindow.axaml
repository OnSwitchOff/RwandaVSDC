								<TextBox Width="150" Text="{Binding	LastRequestDate, Mode=TwoWay}"/>
								<Ellipse Fill="Blue" Width="14" Height="14" ToolTip.Tip="Last Request Date" Margin="5"/>
							</StackPanel>
